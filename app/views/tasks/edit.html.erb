<h1>Modifier la tache</h1>

<%= form_with(model:@task, local: true) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_area :details %>
<%= f.label :completed %>
<%= f.check_box :completed %>
<%= f.submit 'Submit' %>
<% end %>

<%= link_to 'back to list', tasks_path %>
